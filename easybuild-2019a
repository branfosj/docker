FROM centos:7

RUN yum install -y environment-modules
RUN yum -y install epel-release
RUN yum install -y python2-pip
RUN yum install -y git
RUN pip install --upgrade pip
RUN pip install --upgrade setuptools==41.6.0
RUN pip install vsc-base
RUN pip install python-graph-core
RUN pip install python-graph-dot
RUN pip install pep8
